@model AdminPanelViewModel

@{
    ViewData["Title"] = "Home Page";
}

@{
    await Html.RenderPartialAsync("Header", Model);
}


<div class="uk-border-rounded uk-background-muted mt-3 py-5 px-3">
    @foreach (var user in Model.Users)
    {
        <div class="uk-background-default uk-border-rounded d-flex flex-column flex-sm-row justify-content-center justify-content-sm-between align-items-center gap-3 my-4 p-4">
            <div class="d-flex gap-2">
                <div class="d-flex align-items-center gap-1">
                    <span uk-icon="user"></span>
                    <span>@user.UserName</span>
                </div>
                <div class="d-flex align-items-center gap-1">
                    <span uk-icon="heart"></span>
                    <span>@user.LikesCount</span>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <a href="/Profile/@user.UserName" class="uk-button uk-button-primary uk-border-rounded">To profile</a>
            </div>
        </div>
    }
    @{
        await Html.RenderPartialAsync("Pagination", Model);
    }
</div>